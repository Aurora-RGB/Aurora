<UserControl x:Class="AuroraRgb.Profiles.Logitech.Control_Logitech"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:logitech="clr-namespace:AuroraRgb.Profiles.Logitech"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="850" Height="Auto" Width="Auto">
    <Grid>
        <TabControl>
            <TabItem Header="Overview for Chroma">
                <StackPanel Margin="10">
                    <TextBlock>
                        LGS from Logitech need to be installed.
                        &#x0a;
                        Applications will be detected automatically if conditions are met. Check Devices &amp; Wrappers settings for details.
                        &#x0a;&#x0a;
                        Excluded process Lightsync connections will be denied. Custom profiles will have higher priority than this profile.
                    </TextBlock>
                    <TextBlock Margin="0, 10, 0, 0" Text="Excluded Processes" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <StackPanel Orientation="Horizontal">
                        <ListBox ItemsSource="{Binding ExcludedPrograms, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type logitech:Control_Logitech}}, Mode=OneWay}"
                                 SelectedItem="{Binding SelectedExcludedProgram, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type logitech:Control_Logitech}}, Mode=OneWayToSource}"
                                 Width="360" Height="199" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <StackPanel Margin="10, 0, 10, 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Name="ExcludeProcessTb" Width="120"></TextBox>
                                <Button Margin="5" Content="Exclude Process" Click="ExcludeAdd_Click" />
                            </StackPanel>
                            <Button Margin="5" Content="Remove Selected Exclusion" Click="ExcludedRemove_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
