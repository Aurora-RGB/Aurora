<UserControl x:Class="Aurora.Controls.Control_DeviceHint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Aurora.Controls"
             mc:Ignorable="d">
    <Grid Margin="2, 0, 2, 0">
        <Border
            ToolTipService.InitialShowDelay="0" ToolTipService.BetweenShowDelay="0" ToolTip="{Binding HintTooltip}"
            CornerRadius="50"
            Width="20" Height="20"
            Padding="0,0,0,0"
            Background="{Binding CircleBackground}"
            BorderBrush="Black"
            BorderThickness="1">
            <TextBlock HorizontalAlignment="Center" Text="{Binding Text}" />
        </Border>
    </Grid>
</UserControl>